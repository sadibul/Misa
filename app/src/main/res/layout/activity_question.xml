<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Mood"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E66E6E"

        android:orientation="vertical">

        <!-- Page Title TextView -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="130dp"
            android:text="Question"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:text="How are you feeling today?"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold">

        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="25dp">

            <RadioButton
                android:id="@+id/happy_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Happy"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <RadioButton
                android:id="@+id/sick_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sick"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="25dp">

            <RadioButton
                android:id="@+id/sad_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sad"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


            <RadioButton
                android:id="@+id/angry_xml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Angry"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/next_xml"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:icon="@drawable/baseline_chevron_right_24"
            app:iconGravity="end"
            app:iconPadding="-25dp"
            app:iconSize="23dp"
            app:iconTint="@color/white"
            app:strokeColor="#D3D1D1"
            app:strokeWidth="2dp">

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



