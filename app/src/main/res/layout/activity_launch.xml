<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA6F6F"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MeHelp"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>


        <RelativeLayout
            android:id="@+id/signUpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appName"
            android:layout_marginTop="130dp"
            android:layout_alignParentStart="true">

            <!-- Button with custom drawable background -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                android:text="SignUp →"
                android:textColor="#EA6F6F"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/newToMeHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New To MeHelp!"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btnSignUp"
                android:layout_marginStart="25dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/loginContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signUpContainer"
            android:layout_marginTop="90dp"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:id="@+id/alreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account !"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="13dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Login →"
                android:backgroundTint="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#EA6F6F"
                android:elevation="5dp"
                android:layout_toEndOf="@id/alreadyHaveAccount"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>